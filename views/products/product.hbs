<div id="product-details">
    <div id="title-price-container">
        <h1> {{this.title}}</h1>
        <h2>Price: {{this.price}}$</h2>
    </div>
    <div id="picture-description-container">
        <img src="{{this.picture}}" alt="default">
        <div>
            <h3>Description:</h3>
            <p>{{this.description}}</p>   
        </div>
    </div>
    <div id="seller-location-container">
       <p>Seller: {{this.seller.username}}</p> 
       <p>Location: {{this.location}}</p>
    </div>
    
    {{#if user}}
    <div id="buttons-container">
        <form action="/products/{{this._id}}/delete" method="POST">
            <button type="submit" style="width: 20%; border: none; background-color: black; color: white; border-radius: 5px;">Delete</button>
        </form>
        <a href="/products/{{this._id}}/update"><button style="width: 20%; border: none; background-color: black; color: white; border-radius: 5px;">Update</button></a>
    </div>
    {{/if}}
</div>
